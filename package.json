{
  "name": "cms",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:ui": "turbo dev --filter=@repo/ui",
    "dev:chroniconl": "turbo dev --filter=chroniconl",
    "build:ui": "turbo build --filter=@repo/ui",
    "build:stylist": "turbo build --filter=@repo/stylist",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.7",
    "typescript": "^5.4.5"
  },
  "packageManager": "pnpm@9.1.4",
  "engines": {
    "node": ">=18"
  }
}
